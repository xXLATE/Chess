        mc:Ignorable="d"
        Title="Chess" Width="1000" Height="750" Background="#FF292929" MinWidth="1000" MinHeight="750" Icon="Images/Rook.png">
    <Grid x:Name="ChessWindow" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center">
